<?xml version="1.0" encoding="utf-8"?><!--<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"android:layout_width="match_parent"android:layout_height="match_parent">-->

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="34dp"
            android:orientation="vertical">



            <Views.DrawerItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:drawer_icon="@drawable/email_open_outline"
                app:drawer_icon_background_color="#00ffffff"
                app:drawer_title="پیام ها" />

            <Views.DrawerItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:drawer_icon="@drawable/headset"
                app:drawer_icon_background_color="#00ffffff"
                app:drawer_title="ارتباط با ما" />

            <Views.DrawerItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:drawer_icon="@drawable/power"
                app:drawer_icon_background_color="#00ffffff"
                app:drawer_title="خروج" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <Views.TextViewFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:text="شرکت تجارت الکترونیک آریانا"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:font="1" />

            <Views.TextViewFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="نسخه 1.2.0"
                android:textColor="#ffffff"
                android:textSize="12sp"
                app:font="1" />



        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>